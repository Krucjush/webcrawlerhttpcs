<Window x:Class="webcrawlerhttp.SaveFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:webcrawlerhttp"
        mc:Ignorable="d"
        Title="Save Report As" Height="150" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select the format to save the report:"/>
            <RadioButton x:Name="xmlRadioButton" Content="XML"/>
            <RadioButton x:Name="csvRadioButton" Content="CSV"/>
            <RadioButton x:Name="jsonRadioButton" Content="JSON" IsChecked="True"/>
            <Button x:Name="saveButton" Content="Save" Click="saveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
